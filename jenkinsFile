pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = 'df86b7d2-1b7d-4501-9025-bba28187a51d'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {
        stage('Build') {
            steps {
                sh 'echo "ğŸ§ª Building frontend..."'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la build/'  // ØªØ£ÙƒØ¯ Ù…Ù† ÙˆØ¬ÙˆØ¯ Ø§Ù„Ù…Ø¬Ù„Ø¯
            }
        }

       steps {
    sh '''
        echo "ğŸ”§ Installing Netlify CLI..."
        npm install netlify-cli
        
        echo "ğŸ” Checking Netlify installation..."
        node_modules/.bin/netlify --version
        
        echo "ğŸŒ Checking Netlify status..."
        node_modules/.bin/netlify status --auth $NETLIFY_AUTH_TOKEN
        
        echo "ğŸš€ Deploying to production..."
        node_modules/.bin/netlify deploy \
            --dir=build \
            --prod \
            --no-build \
            --auth $NETLIFY_AUTH_TOKEN \
            --site $NETLIFY_SITE_ID \
            --message "Automated deploy - Build ${BUILD_NUMBER}"
        
        echo "âœ… Deployment completed successfully!"
    '''
  }
    }

    post {
        success {
            echo 'âœ… Deployment completed successfully!'
        }
        failure {
            echo 'âŒ Deployment failed. Check logs.'
        }
    }
}