pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = 'df86b7d2-1b7d-4501-9025-bba28187a51d'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {
        stage('Build') {
            steps {
                sh 'echo "ğŸ§ª Building frontend..."'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la build/'  // ØªØ£ÙƒØ¯ Ù…Ù† ÙˆØ¬ÙˆØ¯ Ø§Ù„Ù…Ø¬Ù„Ø¯
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "ğŸš€ Deploying to Netlify..."'
                sh 'npm install -g netlify-cli'
                sh 'netlify deploy  --dir=build --prod  --no-build --auth $NETLIFY_AUTH_TOKEN --site $NETLIFY_SITE_ID'
            }
        }
    }

    post {
        success {
            echo 'âœ… Deployment completed successfully!'
        }
        failure {
            echo 'âŒ Deployment failed. Check logs.'
        }
    }
}